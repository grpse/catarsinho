<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="outter-container">
    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <div class="form-login">
            <h4>Bem-vindo ao Catarsinho</h4>
          
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-sm chat-input", placeholder: "Email" %>
            </br>
            <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm chat-input", placeholder: "Senha" %>

            </br>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label "Lembrar" %>
              </div>
            <% end -%>

            <div class="wrapper">
              <span class="group-btn">
                <%= f.submit "Entrar", class: "btn btn-primary btn-md" %>                
              </span>
              <br>
              <br>
              <span>
                <%= link_to "NÃ£o tem um cadastro ainda?", new_user_registration_path %>
              </span>
            </div>
          </div>        
        </div>
      </div>
    </div>

  </div>

<% end %>
