<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <div class="form-login">
          <h4>Bem-vindo ao Catarsinho</h4>
        
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-sm chat-input", placeholder: "Email" %>
          </br>
          
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm chat-input", placeholder: "Senha" %>
          <% if @minimum_password_length %>
            <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          </br>

          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-sm chat-input", placeholder: "Confirmação" %>
          <br>

          <div class="wrapper">
            <span class="group-btn">
              <%= f.submit "Registrar-se", class: "btn btn-primary btn-md" %>                
            </span>
            <br>
            <br>
            <span>
              <%= link_to "Já possui uma conta?", new_user_session_path %>
            </span>
          </div>
        </div>        
      </div>
    </div>
  </div>
<% end %>
